<form method="post" action=<%= url %>>
    <input id="token" type="hidden" name="_csrf" value="<%= csrfToken %>">
    <input type="hidden" name="_method" value=<%= method %>>

    <%- include('../shared/errors.ejs', { error: validationError }) %>

    <div class="form-group">
        <label for="todo-title">タイトル：</label>
        <input type="text" id="todo-title" name="title" class="form-control" value="<%= todo.title %>"/>
    </div>
    <div class="form-group">
        <label for="todo-description">詳細：</label>
        <textarea id="todo-description" name="description" class="form-control">
                <%= todo.description %>
            </textarea>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="確認"/>
    </div>
</form>