<form method=post action=<%= url %>>
  <input id="token" type="hidden" name="_csrf" value="<%= csrfToken %>">
  <input type="hidden" name="_method" value=<%= method %> />

  <%- include('../shared/errors.ejs', { validationError }) %>

  <div class="form-group">
    <label for="organization-user-role">組織名：</label>
    <select id="organization-user-role" name="role" class="form-control">
      <% Object.values(roleOption).forEach(function (role) { %>
        <option value="<%= role %>">
          <%= __(`models.OrganizationUser.role.${role}`) %>
        </option>
      <% }) %>
    </select>
  </div>

  <div class="form-group">
    <input type="submit" class="btn btn-primary" value="確認" />
  </div>
</form>
