<h1>メンバー追加</h1>

<form method=post action="/organizations/<%= organization.id %>/organization_users">
    <input id="token" type="hidden" name="_csrf" value="<%= csrfToken %>">
    <input type="hidden" name="_method" value=post />

    <div class="form-group">
        <label for="organization-user-email">Eメール：</label>
        <input type="text" name="email" id="organization-user-email" >
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="確認" />
    </div>
</form>

<a href="/organizations/<%= organization.id %>">組織詳細へ</a>