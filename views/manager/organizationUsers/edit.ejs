<h1>メンバー情報更新</h1>

<form method=post action="/organizations/<%= organizationUser.organization.id %>/organization_users/<%= organizationUser.id %>">
    <input id="token" type="hidden" name="_csrf" value="<%= csrfToken %>">
    <input type="hidden" name="_method" value=put />

    <%- include('../../shared/errors.ejs', { validationError }) %>

    <div class="form-group">
        <label for="organization-user-role">ロール：</label>
        <select id="organization-user-role" name="role" class="form-control">
            <% Object.values(roleOption).forEach(function (role) { %>
                <option value="<%= role %>">
                    <%= __(`models.OrganizationUser.role.${role}`) %>
                </option>
            <% }) %>
        </select>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="確認" />
    </div>
</form>

<a href="/organizations/<%= organizationUser.organization.id %>/organization_users/<%= organizationUser.id %>">メンバー詳細へ</a>